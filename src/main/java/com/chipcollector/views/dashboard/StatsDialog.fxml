<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<VBox fx:controller="com.chipcollector.controllers.dashboard.StatsController"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="750.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="50">
    <padding>
        <Insets left="20.0" right="20.0" top="10.0" bottom="10.0"/>
    </padding>
    <stylesheets>
        <URL value="@StatsDialog.css"/>
    </stylesheets>
    <children>
        <VBox alignment="CENTER">
            <Text id="numPokerChipsLabel" text="Number of poker chips: "/>
            <Text id="numPokerChipsValue" fx:id="numPokerChipsValue"/>
        </VBox>
        <HBox spacing="20">
            <children>
                <VBox alignment="TOP_CENTER" prefWidth="250">
                    <TextFlow textAlignment="CENTER">
                        <Text id="numPokerChipsBoughtInLast7DaysLabel" text="Bought in the last 7 days: "/>
                    </TextFlow>
                    <Text id="numPokerChipsBoughtInLast7DaysValue" fx:id="numPokerChipsBoughtInLast7DaysValue"/>
                </VBox>

                <VBox alignment="TOP_CENTER" prefWidth="250">
                    <TextFlow textAlignment="CENTER">
                        <Text id="numPokerChipsBoughtInLastMonthLabel" text="Bought in the last month: "/>
                    </TextFlow>
                    <Text id="numPokerChipsBoughtInLastMonthValue" fx:id="numPokerChipsBoughtInLastMonthValue"/>
                </VBox>

                <VBox alignment="TOP_CENTER" prefWidth="250">
                    <TextFlow textAlignment="CENTER">
                        <Text id="numDifferentCasinosLabel" text="Number of casinos: "/>
                    </TextFlow>
                    <Text id="numDifferentCasinosValue" fx:id="numDifferentCasinosValue"/>
                </VBox>
            </children>
        </HBox>
        <HBox alignment="BOTTOM_RIGHT" spacing="10">
            <Button onMouseClicked="#onViewAllButtonPressed">View All</Button>
            <Button>Search</Button>
            <Button onMouseClicked="#onAddButtonPressed">Add</Button>
        </HBox>
    </children>
</VBox>
