<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane layoutX="-1.0" layoutY="-1.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.chipcollector.controllers.dashboard.SearchDialogController">
    <center>
        <SplitPane dividerPositions="0.2737430167597765" orientation="VERTICAL" prefHeight="200.0"
                   BorderPane.alignment="CENTER">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="false">
                    <children>
                        <TableView fx:id="casinosTableView" focusTraversable="false" layoutX="230.0" layoutY="-28.0"
                                   prefHeight="143.0"
                                   prefWidth="778.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                                   onMouseClicked="#onCasinoElementClicked">
                            <columns>
                                <TableColumn minWidth="-Infinity" prefWidth="300.0" text="Casino">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="name"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn prefWidth="200.0" text="City">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="city"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn prefWidth="200.0" text="State">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="state"/>
                                    </cellValueFactory>
                                </TableColumn>
                                <TableColumn prefWidth="200.0" text="Country">
                                    <cellValueFactory>
                                        <PropertyValueFactory property="country"/>
                                    </cellValueFactory>
                                </TableColumn>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" SplitPane.resizableWithParent="false">
                    <children>
                        <TableView fx:id="pokerChipsTableView" focusTraversable="false" layoutX="309.0" layoutY="103.0"
                                   prefHeight="384.0"
                                   prefWidth="778.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn prefWidth="103.0" text="Front"/>
                                <TableColumn prefWidth="116.0" text="Back"/>
                                <TableColumn prefWidth="75.0" text="Denom"/>
                                <TableColumn prefWidth="75.0" text="Issued"/>
                                <TableColumn prefWidth="75.0" text="Mold"/>
                                <TableColumn prefWidth="75.0" text="Inserts"/>
                                <TableColumn prefWidth="75.0" text="Inlay"/>
                                <TableColumn prefWidth="75.0" text="TCR #"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </center>
    <top>
        <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" prefHeight="55.0" spacing="10.0">
            <children>
                <TextField fx:id="searchTextField" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS"
                           onKeyPressed="#onKeyPressed"/>
                <ComboBox fx:id="searchSourceCombobox" prefWidth="180.0"/>
                <Button fx:id="searchButton" minWidth="80" maxWidth="80" text="%searchdialog.search.button.text"
                        onMouseClicked="#onSearchButtonPressed"/>
            </children>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </HBox>
    </top>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0"/>
    </padding>
    <stylesheets>
        <URL value="@SearchDialog.css"/>
    </stylesheets>
</BorderPane>
